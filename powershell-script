[string]$dev="C:\dev"
[string]$projects=$dev + "\projects"
[string]$shared=$dev + "\shared"
[string]$remote="r:\picnet\shared_lib.git"

IF ( !( Test-Path -Path $dev ) ) { mkdir $dev }
IF ( !( Test-Path -Path $projects ) ) { mkdir $projects }

IF ( Test-Path -Path $shared ) { echo $shared Exists. } ElSE { git clone $remote $shared }

[string]$fileName="windows-best-performance.reg"
[string]$current=$pwd
[string]$filePath=$current + "\" + $fileName

echo Importing $fileName

IF ( Test-Path -Path $fileName ) { Reg import $fileName } ELSE { echo Could not find $fileName. }

echo Restarting themes
IF ( Test-Path -Path $fileName ) { net stop themes }
IF ( Test-Path -Path $fileName ) { net start themes }
